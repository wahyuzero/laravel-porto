# ══════════════════════════════════════════
# FrugalDev - Environment Configuration
# ══════════════════════════════════════════
# Copy this to .env and adjust values

APP_NAME="FrugalDev"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://yourdomain.com

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# ── Database ──
# SQLite is the default, no config needed
DB_CONNECTION=sqlite

# ── Session / Cache / Queue ──
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database
QUEUE_CONNECTION=database

# ── Mail ──
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="hello@yourdomain.com"
MAIL_FROM_NAME="${APP_NAME}"

# ── CDN (optional) ──
CDN_URL=
CDN_ENABLED=false
CDN_CACHE_MAX_AGE=2592000

# ── Minification ──
MINIFY_HTML=true

# ── Admin Credentials ──
# Set these to create the admin user
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=
